<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraintMain"
    android:paddingStart="@dimen/_4sdp"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/imgNav"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        app:layout_goneMarginStart="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/ic_baseline_videocam_24"
        android:tint="#0098da"
        app:layout_constraintBottom_toBottomOf="@+id/txtNav"
        app:layout_constraintEnd_toStartOf="@+id/txtNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtNav" />

    <TextView
        android:id="@+id/txtNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/robotoregular"
        android:maxLines="1"
        android:padding="@dimen/_6sdp"
        android:text="Logout"
        android:textColor="#4a4a4a"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgNav"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>