<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:orientation="vertical"
              android:layout_marginTop="@dimen/margin_2"
              android:paddingTop="@dimen/margin_5"
              android:paddingRight="@dimen/margin_5"
              android:paddingBottom="@dimen/margin_5"
>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
            android:layout_height="@dimen/margin_180"
            android:background="@android:color/transparent"
            app:cardCornerRadius="@dimen/margin_8">

        <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:padding="1dp">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_2"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"
                    app:riv_corner_radius_top_left="@dimen/margin_8"
                    app:riv_corner_radius_top_right="@dimen/margin_8"
                    app:riv_corner_radius_bottom_left="@dimen/margin_8"
                    app:riv_corner_radius_bottom_right="@dimen/margin_8" />

            <TextView
                    android:id="@+id/tv_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="@dimen/margin_2"
                    android:textSize="@dimen/margin_14"
                    android:typeface="monospace"
                    android:layout_centerInParent="true"
            />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
