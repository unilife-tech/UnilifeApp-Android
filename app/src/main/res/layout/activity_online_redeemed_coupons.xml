<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    tools:context=".brands.OnlineRedeemedCoupons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_12sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/ic_chevron_left_black_24dp"
            android:drawableTint="@color/white"
            android:fontFamily="@font/robotoregular"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:text="My Account"
            android:onClick="goBack"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/bottomLayout"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_3sdp"
                    android:layout_margin="@dimen/_16sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <unilife.com.unilife.utils.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_10"
                            android:paddingStart="@dimen/margin_20"
                            android:paddingTop="@dimen/margin_5"
                            android:paddingEnd="@dimen/margin_20"
                            android:paddingBottom="@dimen/margin_5"
                            android:text="Enjoy Saving Walk in to Store.."
                            android:textColor="@color/colorPrimary" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivuser"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:src="@drawable/default_image" />

                        <unilife.com.unilife.utils.RegularTextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:text="-"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_13sdp"
                           />

                        <unilife.com.unilife.utils.RegularTextView
                            android:id="@+id/emailid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:text="-"
                            android:textColor="@color/medium_grey"
                            android:textSize="@dimen/_12sdp"
                           android:gravity="center"/>

                        <unilife.com.unilife.utils.RegularTextView
                            android:id="@+id/tvuser_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:text="-"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_12sdp" />

                        <unilife.com.unilife.utils.RegularTextView
                            android:id="@+id/tvDescOnLINe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_16sdp"
                            android:text="-"
                            android:textColor="@color/medium_black"
                            android:textSize="@dimen/_10sdp"
                            />

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_150sdp"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/gift" />

                            <unilife.com.unilife.utils.RegularTextView
                                android:id="@+id/offerOnline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="35FRTY56YFR67HJY"
                                android:textColor="@color/medium_black"
                                android:textSize="@dimen/_12sdp"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_10"
                            android:orientation="horizontal">

                            <unilife.com.unilife.utils.RegularTextView
                                android:id="@+id/tvmanually"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@drawable/border_blue_cornor"
                                android:paddingStart="@dimen/margin_20"
                                android:paddingTop="@dimen/margin_5"
                                android:paddingEnd="@dimen/margin_20"
                                android:paddingBottom="@dimen/margin_5"
                                android:text="Use in Store(Manually)"
                                android:textColor="@color/white" />

                            <unilife.com.unilife.utils.RegularTextView
                                android:id="@+id/sharebtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@drawable/border_blue_cornor"
                                android:paddingStart="@dimen/margin_20"
                                android:paddingTop="@dimen/margin_5"
                                android:paddingEnd="@dimen/margin_20"
                                android:paddingBottom="@dimen/margin_5"
                                android:text="share"
                                android:textColor="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

<!--    <include-->
<!--        android:id="@+id/bottomLayout"-->
<!--        layout="@layout/bottom_bar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true" />-->

</RelativeLayout>

