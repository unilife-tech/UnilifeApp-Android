<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".brands.RevelRedeemedCoupons">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomLayout"
            android:layout_marginBottom="@dimen/margin_80"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHeaderReveel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/colorPrimary"
                android:drawableStart="@drawable/ic_chevron_left_black_24dp"
                android:drawableTint="@color/white"
                android:fontFamily="@font/robotoregular"
                android:gravity="start|center_vertical"
                android:onClick="goBack"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:text="My Account"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_15">

                <unilife.com.unilife.utils.RegularTextView
                    android:id="@+id/tvSaveCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/border_blue_cornor"
                    android:paddingStart="@dimen/margin_20"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingEnd="@dimen/margin_20"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="Save"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_20"
                    android:background="@drawable/black_border_outline"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_10">

                    <unilife.com.unilife.utils.RegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal"
                        android:paddingStart="@dimen/margin_20"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_20"
                        android:paddingBottom="@dimen/margin_5"
                        android:text="Enjoy Saving Online"
                        android:textColor="@color/colorPrimary" />

                    <unilife.com.unilife.utils.RegularTextView
                        android:id="@+id/couponcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_5"
                        android:paddingStart="@dimen/margin_20"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_20"
                        android:paddingBottom="@dimen/margin_5"
                        android:text="34YFGTF56TR"
                        android:textColor="@color/medium_grey" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="@dimen/margin_50"
                        android:layout_marginRight="@dimen/margin_50"
                        android:background="@color/medium_grey" />


                    <unilife.com.unilife.utils.RegularTextView
                        android:id="@+id/tvDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_15"
                        android:text="-"
                        android:textColor="@color/medium_black"
                        android:textSize="@dimen/margin_12"
                        tools:ignore="RtlCompat" />

                    <unilife.com.unilife.utils.RegularTextView
                        android:id="@+id/tv_redeemedCoupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_20"
                        android:background="@drawable/border_blue_cornor"
                        android:paddingStart="@dimen/margin_30"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/margin_30"
                        android:paddingBottom="@dimen/margin_5"
                        android:text="Redeem"
                        android:textColor="@color/white" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>

