<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_8"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_5"
    android:paddingRight="@dimen/margin_5"
    android:paddingBottom="@dimen/margin_5">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="@dimen/margin_150"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cardCornerRadius="@dimen/margin_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="1dp">

            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="3dp"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image"
                    app:riv_corner_radius_bottom_left="@dimen/margin_8"
                    app:riv_corner_radius_bottom_right="@dimen/margin_8"
                    app:riv_corner_radius_top_left="@dimen/margin_8"
                    app:riv_corner_radius_top_right="@dimen/margin_8"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_image"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:singleLine="true"
                android:text="jkjkjkjkjjjj"
                android:textColor="@color/medium_black"
                android:textSize="@dimen/margin_12"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:singleLine="true"
                android:text="jkjkjkjkjjjj"
                android:textColor="@color/medium_black"
                android:textSize="@dimen/margin_12"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
