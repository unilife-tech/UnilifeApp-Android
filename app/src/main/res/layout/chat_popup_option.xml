<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/grey_outline"
    android:orientation="vertical"
    android:padding="@dimen/margin_6">


    <unilife.com.unilife.utils.RegularTextView
        android:id="@+id/tvCreateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_8"
        android:text="Groups"
        android:textSize="@dimen/margin_12"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/margin_5"
        android:visibility="gone"
        android:background="@color/Olgrey" />

    <unilife.com.unilife.utils.RegularTextView
        android:id="@+id/tvChangeWallpaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_8"
        android:text="Change Chat Wallpaper"
        android:textSize="@dimen/margin_12"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/Olgrey" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <unilife.com.unilife.utils.RegularTextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:padding="@dimen/margin_8"
            android:text="Status"
            android:textSize="@dimen/margin_12"

            />


        <Switch
            android:id="@+id/SwStatus"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_45"
            android:layout_toRightOf="@+id/tvStatus"
            android:buttonTint="@color/colorPrimary"
            android:theme="@style/SwitchTheme" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/Olgrey" />

    <unilife.com.unilife.utils.RegularTextView
        android:id="@+id/tvReqRcvd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_8"
        android:text="Request Received"
        android:textSize="@dimen/margin_12"


        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/Olgrey" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <unilife.com.unilife.utils.RegularTextView
            android:id="@+id/tvChangeMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:padding="@dimen/margin_8"
            android:text="Change Mode"
            android:textSize="@dimen/margin_12"

            />


        <Switch
            android:id="@+id/SwChangeMode"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvChangeMode"
            android:buttonTint="@color/colorPrimary"
            android:theme="@style/SwitchTheme" />


    </RelativeLayout>


</LinearLayout>