<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".blogs.AllBlogSettings">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">



        <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_20"
          >

        <ImageView
                android:id="@+id/ivbackArrow"
                android:layout_width="@dimen/margin_12"
                android:layout_height="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/ic_back_arrow"

                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
        />

        <unilife.com.unilife.utils.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest Blogs"
                android:textSize="@dimen/margin_20"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_gravity=""
        />



    </RelativeLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rycBlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_80"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_20"

    >

    </android.support.v7.widget.RecyclerView>

    </LinearLayout>




    <include
            android:id="@+id/bottomLayout"
            layout="@layout/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
    />

</RelativeLayout>