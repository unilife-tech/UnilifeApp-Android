<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:cardElevation="@dimen/dp5"
        app:contentPadding="@dimen/dp10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <unilife.com.unilife.utils.RegularTextView
                android:id="@+id/tvTitleIs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:singleLine="true"
                android:text="Chat Delete"
                android:textColor="@color/black"
                android:textSize="@dimen/margin_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <unilife.com.unilife.utils.RegularTextView
                android:id="@+id/tvWarning"
                android:layout_width="@dimen/margin_220"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center"
                android:text="There be no backup of chat available once deleted"
                android:textColor="@color/medium_black"
                android:textSize="@dimen/margin_16"
                app:layout_constraintEnd_toEndOf="@id/tvTitleIs"
                app:layout_constraintStart_toStartOf="@id/tvTitleIs"
                app:layout_constraintTop_toBottomOf="@id/tvTitleIs" />

            <unilife.com.unilife.utils.RegularTextView
                android:id="@+id/tvNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@drawable/border_blue_cornor"
                android:gravity="center"
                android:paddingStart="@dimen/margin_20"
                android:paddingTop="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_8"
                android:text="No"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvYes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWarning" />

            <unilife.com.unilife.utils.RegularTextView
                android:id="@+id/tvYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@drawable/border_blue_cornor"
                android:gravity="center"
                android:paddingStart="@dimen/margin_20"
                android:paddingTop="@dimen/margin_8"
                android:paddingEnd="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_8"
                android:text="Yes"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvNo"
                app:layout_constraintTop_toBottomOf="@id/tvWarning" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </android.support.v7.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>