<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".chat.BlockedUser">

    <include
            android:id="@+id/rlTool"
            layout="@layout/back_icon_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            />

    <LinearLayout
            android:id="@+id/llchatSettings2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
            <LinearLayout
                    android:id="@+id/llbackup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginEnd="@dimen/margin_15"

                        >

                    <unilife.com.unilife.utils.RegularTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Turn on Chat Backup"
                            android:textColor="@color/medium_black"
                            android:textSize="@dimen/margin_20"
                            />


                    <!-- <ImageView
                             android:id="@+id/ivSwitchButton"
                             android:layout_width="@dimen/margin_35"
                             android:layout_height="@dimen/margin_20"
                             android:layout_alignParentRight="true"
                             android:layout_centerVertical="true"
                             android:layout_marginTop="@dimen/margin_20"
                             android:background="@drawable/switch_button_box"/>-->

                    <Switch
                            android:id="@+id/SwChangeMode"
                            android:layout_width="@dimen/margin_50"
                            android:layout_height="@dimen/margin_20"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_toRightOf="@+id/tvChangeMode"
                            android:theme="@style/SwitchTheme" />


                </RelativeLayout>
                <View android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/llbackup"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@color/light_grey"
                        />
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        >



                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_marginEnd="@dimen/margin_15"
                            >


                        <ImageView
                                android:layout_width="@dimen/margin_25"
                                android:layout_height="@dimen/margin_25"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/selected_dot"/>


                        <unilife.com.unilife.utils.RegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:text="Daily (Selected)"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/margin_20"
                                />


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_15">


                        <ImageView
                                android:layout_width="@dimen/margin_25"
                                android:layout_height="@dimen/margin_25"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_radiio"/>


                        <unilife.com.unilife.utils.RegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:text="Weekly"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/margin_20"
                                />


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_15"

                            >


                        <ImageView
                                android:layout_width="@dimen/margin_25"
                                android:layout_height="@dimen/margin_25"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_radiio"/>


                        <unilife.com.unilife.utils.RegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:text="Monthly"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/margin_20"
                                />


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginEnd="@dimen/margin_15"

                            >


                        <ImageView
                                android:layout_width="@dimen/margin_25"
                                android:layout_height="@dimen/margin_25"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/ic_radiio"/>


                        <unilife.com.unilife.utils.RegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/margin_15"
                                android:text="Never"
                                android:textColor="@color/medium_grey"
                                android:textSize="@dimen/margin_20"
                                />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                >
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <LinearLayout
                        android:id="@+id/llDeleteChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <unilife.com.unilife.utils.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="Delete Chat"
                            android:textColor="@color/medium_black"
                            android:textSize="@dimen/margin_20"
                            />

                    <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@color/light_grey"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llArchiveChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <unilife.com.unilife.utils.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="Archive Chat"
                            android:textColor="@color/medium_black"
                            android:textSize="@dimen/margin_20"
                            />

                    <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@color/light_grey"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llUnArchiveChat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <unilife.com.unilife.utils.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="Unarchive Chat"
                            android:textColor="@color/medium_black"
                            android:textSize="@dimen/margin_20"
                            />

                    <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@color/light_grey"
                            />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/llsavedMultimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                    <unilife.com.unilife.utils.RegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="View Saved Multimedia"
                            android:textColor="@color/medium_black"
                            android:textSize="@dimen/margin_20"
                            />

                    <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@color/light_grey"
                            />
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llblockeduser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >


                    <unilife.com.unilife.utils.RegularTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="View Blocked Users"
                            android:textColor="@color/medium_black"
                            android:textSize="@dimen/margin_20"
                            />

                    <View android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@color/light_grey"
                            />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>