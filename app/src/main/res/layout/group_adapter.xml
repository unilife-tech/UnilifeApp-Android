<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivuser"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:src="@drawable/no_image"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivuser"
            android:orientation="horizontal"
            android:weightSum="2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivuser"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/margin_5"
                android:orientation="vertical">

            <unilife.com.unilife.utils.RegularTextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/medium_black"
                    android:layout_marginTop="@dimen/margin_2"
                    android:textSize="@dimen/margin_15" />

            <unilife.com.unilife.utils.RegularTextView
                    android:id="@+id/tvTotalMembers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/margin_12"
                    />

        </LinearLayout>


    <LinearLayout
            android:id="@+id/llUnjoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivuser"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:layout_marginRight="@dimen/margin_8"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

        <unilife.com.unilife.utils.RegularTextView
                android:id="@+id/tvUnjoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_blue_cornor"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_6"
                android:paddingTop="@dimen/margin_5"
                android:paddingRight="@dimen/margin_6"
                android:paddingBottom="@dimen/margin_5"
                android:text="Unjoin"
                android:textColor="@color/white"
                android:textSize="@dimen/margin_12" />

    </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@id/ivuser"
            android:layout_marginTop="@dimen/margin_12"
            android:background="@color/Olgrey" />


</RelativeLayout>
