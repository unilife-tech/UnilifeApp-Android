<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfileVd"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/default_profile"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="@dimen/_1sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:padding="@dimen/_6sdp"
        android:background="@drawable/back_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgProfileVd"
        app:layout_constraintTop_toTopOf="@+id/imgProfileVd">

        <TextView
            android:id="@+id/txtNameVd"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Charliz Theron"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTimeVd"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_3sdp"
            android:fontFamily="@font/robotoregular"
            android:textColor="#808080"
            android:gravity="center_vertical"
            android:text="Lorem Ipsum is simply dummy text of the printing
and typesetting industry. Lorem Ipsum has
been the industry's standard dummy text ever
since the 1500s,"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/txtNameVd"
            app:layout_constraintTop_toBottomOf="@+id/txtNameVd" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>