<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/group_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/clDoc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivDoc"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_80"
            android:padding="@dimen/dp10"
            android:src="@drawable/doc_receiver"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ivDocName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp10"
            android:singleLine="true"
            android:text="document"
            android:textColor="@color/medium_black"
            android:textSize="@dimen/margin_14"
            app:layout_constraintBottom_toBottomOf="@id/ivDoc"
            app:layout_constraintEnd_toStartOf="@id/cbSelectDoc"
            app:layout_constraintStart_toEndOf="@id/ivDoc"
            app:layout_constraintTop_toTopOf="@id/ivDoc" />

        <CheckBox
            android:id="@+id/cbSelectDoc"
            android:button="@drawable/check_box_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp10"
            app:layout_constraintBottom_toBottomOf="@id/ivDocName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDocName"
            app:layout_constraintTop_toTopOf="@id/ivDocName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>