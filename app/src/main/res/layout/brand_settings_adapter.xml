<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_20"
        >

    <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_6"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">




            <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_imageViewAll"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/no_image"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin_10"
                    app:riv_corner_radius_top_left="@dimen/margin_8"
                    app:riv_corner_radius_top_right="@dimen/margin_8"
                    app:riv_corner_radius_bottom_left="@dimen/margin_8"
                    app:riv_corner_radius_bottom_right="@dimen/margin_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <unilife.com.unilife.utils.RegularTextView
                    android:id="@+id/tv_Coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="klmkvbnkmk"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/margin_75"
                    />


            <unilife.com.unilife.utils.RegularTextView
                    android:id="@+id/tv_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="fklhgbfbgkl/vbnklgfb bgkdrgkbg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/iv_imageViewAll"
                    />


            <unilife.com.unilife.utils.RegularRoundedTextView
                    android:id="@+id/tv1btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_blue_cornor"
                    android:paddingLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_8"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="View Online"
                    android:textColor="@color/white"
                    android:textSize="@dimen/margin_10"
                    app:layout_constraintEnd_toStartOf="@id/tv2btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Title"
            />

            <unilife.com.unilife.utils.RegularRoundedTextView
                    android:id="@+id/tv2btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Title"
                    app:layout_constraintStart_toEndOf="@id/tv1btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="View Instore"
                    android:textColor="@color/white"
                    android:background="@drawable/border_blue_cornor"
                    android:layout_marginTop="@dimen/margin_10"
                    android:paddingTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingLeft="@dimen/margin_8"
                    android:paddingRight="@dimen/margin_8"
                    android:textSize="@dimen/margin_10"

                    />







        </androidx.constraintlayout.widget.ConstraintLayout>

    </android.support.v7.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>