<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_5"
    android:layout_marginBottom="@dimen/margin_10">

    <TextView
        android:id="@+id/tvUploadImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_white_rcorner"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="Upload Image"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/margin_18" />

    <TextView
        android:id="@+id/tvUploadVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUploadImage"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_white_rcorner"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="Upload Video"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/margin_18" />

    <TextView
        android:id="@+id/tvUploadAttach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUploadVideo"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_white_rcorner"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="Upload Document"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/margin_18" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUploadAttach"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/bg_white_rcorner"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="Cancel"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/margin_18" />

</RelativeLayout>