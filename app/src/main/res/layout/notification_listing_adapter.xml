<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/clnotification"
        android:layout_marginTop="@dimen/margin_6"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileImg"
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_marginStart="@dimen/margin_15"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/margin_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/no_image"
            />

    <unilife.com.unilife.utils.RegularTextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/ivProfileImg"
            app:layout_constraintTop_toTopOf="parent"
            android:text=""
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_20"
            android:textColor="@color/medium_black"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_5"

    />

    <unilife.com.unilife.utils.RegularTextView
            android:id="@+id/tvNotificationtext"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@+id/ivProfileImg"
            app:layout_constraintTop_toBottomOf="@+id/tv_username"
            app:layout_constraintEnd_toStartOf="@+id/tvDate"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginEnd="@dimen/margin_15"
            android:layout_marginStart="@dimen/margin_20"

    />


    <unilife.com.unilife.utils.RegularTextView
            android:id="@+id/tvDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27-11-19"
            android:textSize="@dimen/margin_10"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_15"
    />

    <View
        android:layout_width="match_parent"
            android:layout_height="0.8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivProfileImg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_6"
            android:background="@color/other_grey"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"

          />


</androidx.constraintlayout.widget.ConstraintLayout>