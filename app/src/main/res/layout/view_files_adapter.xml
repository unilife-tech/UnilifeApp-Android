    <CheckBox
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/chk"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_60"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"


    />
        <unilife.com.unilife.utils.RegularTextView
                android:id="@+id/txtView"
                android:layout_width="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:minLines="2"
                android:textSize="@dimen/margin_15"
                android:gravity="center"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imgView"
                app:layout_constraintEnd_toStartOf="@+id/chk"
                android:paddingStart="@dimen/margin_15"
                android:paddingEnd="@dimen/margin_5"
        />
    <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/imgView"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_7"
            android:scaleType="fitXY"
            android:src="@drawable/img"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_width="@dimen/margin_25"
            android:layout_height="@dimen/margin_35"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/chk"


            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutchk2"
