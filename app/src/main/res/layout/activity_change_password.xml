<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChangePassword">

    <include
            android:id="@+id/rltool"
            layout="@layout/back_icon_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"


    />

    <EditText
            android:id="@+id/etOldpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rltool"
            android:layout_marginTop="@dimen/margin_100"
            app:layout_constraintBottom_toTopOf="@+id/etNewPassword"
            android:hint="Old Password"
            android:textColor="@color/colorPrimary"
            android:inputType="textPassword"
            android:textSize="@dimen/margin_15"
            android:drawableStart="@drawable/key"
            android:drawablePadding="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_50"


           />

    <EditText
            android:id="@+id/etCnfrmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etNewPassword"
            android:hint="Confirm Password"
            android:textSize="@dimen/margin_15"
            android:drawableStart="@drawable/key"
            android:textColor="@color/colorPrimary"
            android:inputType="textPassword"
            android:drawablePadding="@dimen/margin_20"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_50"


           />

    <EditText
            android:id="@+id/etNewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etOldpassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:hint="New Password"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_50"
            android:textSize="@dimen/margin_15"
            android:drawableStart="@drawable/key"
            android:drawablePadding="@dimen/margin_20"
            android:layout_height="wrap_content"/>

    <unilife.com.unilife.utils.RegularTextView
            android:id="@+id/btnChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/etCnfrmpassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/button_border"
            android:textColor="@color/white"
            android:textSize="@dimen/margin_20"
            android:text="Change Password"
            android:layout_marginTop="@dimen/margin_60"
            android:paddingRight="@dimen/margin_35"
            android:paddingLeft="@dimen/margin_35"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"

    />


</androidx.constraintlayout.widget.ConstraintLayout>