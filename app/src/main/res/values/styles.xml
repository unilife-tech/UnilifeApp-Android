<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <!--<item name="textColorSecondary">@color/colorPrimary</item>-->
        <item name="android:typeface">serif</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>


    <style name="AppTheme.blue">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="custom_alert_dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextStyleProfile" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>

    </style>

    <style name="TextEditProfile" parent="android:Widget.TextView">
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_6sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">Edit</item>
        <item name="android:textColor">@color/medium_red</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_profile_skill</item>
        <item name="android:drawableEnd">@drawable/ic_border_edit_icon</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>

    </style>

    <style name="TextEditProfile2" parent="android:Widget.TextView">
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:text">Add</item>
        <item name="android:textColor">#658d21</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:gravity">center_vertical|center</item>
        <item name="android:background">@drawable/back_profile_skill</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_add_circle_24</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
